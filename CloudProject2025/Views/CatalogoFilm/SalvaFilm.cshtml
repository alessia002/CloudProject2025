@model CatalogoFilmSalvaFilmViewModel

@{
    ViewData["Title"] = "Salva film";
}

<html>
<head>
    <title>Salva Film</title>
</head>
<body>
    <form action="" method="post">

        @Html.HiddenFor(s => s.NuovoFilm)
        <label>Id</label>
        @Html.EditorFor(s => s.FilmDaSalvare.Id)
        <label>Nome</label>
        @Html.EditorFor(s => s.FilmDaSalvare.Title)
        <br />
        <label>Genre</label>
        @Html.EditorFor(s => s.FilmDaSalvare.Genre)
        <br />

     
        <button type="submit">Salvato!</button>
    </form>
</body>
</html>
