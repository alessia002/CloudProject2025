@model CatalogoFilmRicercaFilmViewModel

@{
    ViewData["Title"] = "Ricerca film";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="p-4 bg-light border rounded shadow-lg" style="max-width: 900px; width: 100%;">
        <h1 class="text-dark text-center">@Model.ElencoFilm.NomeElenco</h1>

        <table class="table border border-primary table-striped">
            <thead class="bg-primary text-white">
            <tr>
                <th> </th>
                <th>Titolo</th>
                <th>Trama</th>
                <th>Anno</th>
                <th>Genere</th>
                <th>Regista</th>
               
            </tr>
            </thead>
            <tbody>
                @if (Model.ElencoFilm.ListaFilm.Any())
                {
                    @foreach (var film in Model.ElencoFilm.ListaFilm.OrderBy(s => s.Title))
                    {
                            <tr>
                                <td>
                                <form method="post" asp-action="AddFilm" asp-controller="CatalogoFilm">
                                    <input type="hidden" name="title" value="@film.Title" />
                                    <input type="hidden" name="plot" value="@film.Plot" />
                                    <input type="hidden" name="year" value="@film.Year" />
                                    <input type="hidden" name="genre" value="@film.Genre" />
                                    <input type="hidden" name="director" value="@film.Director" />
                                    <button type="submit" class="btn btn-warning btn-sm"> + </button>
                                </form>
                            </td>
                                <td class="text-dark">@film.Title</td>
                                <td class="text-dark">@film.Plot</td>
                                <td class="text-dark">@film.Year</td>
                                <td class="text-dark">@film.Genre</td>
                                <td class="text-dark">@film.Director</td>
                             

                            </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-dark">Non ci sono film disponibili</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
